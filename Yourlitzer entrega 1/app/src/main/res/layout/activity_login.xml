<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    android:id="@+id/layout1"
    android:background="#ff050505"

    android:weightSum="1">
    <!--  Logo -->

    <!--  Email Label -->

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="Usuario"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView2" />

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/edusuario"

        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:autoText="false"
        android:background="#FFFFFf" />

    <!--  Password Label -->

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Password"
        android:layout_below="@+id/edusuario"
        android:layout_alignLeft="@+id/edusuario"
        android:layout_alignStart="@+id/edusuario"
        android:id="@+id/textView3" />

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:password="true"
        android:id="@+id/edpassword"

        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:background="#FFFFFf" />

    <!-- Login button -->
    <Button
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/Blogin"
        android:layout_gravity="right"
        android:layout_below="@+id/edpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- Link to forgot passw -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:id="@+id/btn_crearcuenta"
        android:longClickable="false"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar contraseÃ±a"
        android:id="@+id/btn_recuperarpass"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/yourlitzer"
        android:layout_above="@+id/btn_crearcuenta"
        android:layout_centerHorizontal="true" />

    <!-- Link to Registration Screen -->

</RelativeLayout>
